<section class="container col-md-6">
    <form action="/create" method="POST" class="form">
        <h2 class="text-center mt-3 ">Criar Novo Post</h2>
        <div class="mb-3 form-post">
            <label for="title" class="form-label">Título</label>
            <input type="text" class="form-control bg-dark text-light" name="title" placeholder="Título do Post">
        </div>
        <div class="mb-3">
            <label for="content" class="form-label">Texto</label>
            <textarea class="form-control bg-dark text-light" name="content" rows="3" placeholder="Digite seu texto"></textarea>
        </div>
        <div class="mb-3 form-post">
            <label for="author" class="form-label">Colaborador</label>
            <input type="text" class="form-control bg-dark text-light" name="author" placeholder="Colaborador">
        </div>
         <div class="mb-3 form-post">
            <label for="date" class="form-label">Data</label>
            <input type="date" class="form-control bg-dark text-light" name="date" placeholder="Data do Post">
        </div>
        <div class=" d-flex justify-content-center">
            <input class="btn btn-sm btn-success col-md-2 mb-4" type="submit" value="POSTAR">
        </div>
    </form>
</section>
